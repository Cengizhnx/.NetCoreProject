@model Product

<form method="post" asp-action="Edit" class="card border-secondary">
    <div class="card-header">Edit Product</div>
    <div class="px-4">
        <div class="form-group my-2">
            <label class="my-1" asp-for="Title">Title</label>
            <input type="text" asp-for="Title" class="form-control mb-1" placeholder="Enter Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label class="my-1" asp-for="Description">Description</label>
            <textarea type="text" asp-for="Description" class="form-control mb-1" style="resize:none" placeholder="Enter Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label class="my-1" asp-for="Images">Image</label>
            <input type="text" asp-for="Images" class="form-control mb-1" placeholder="Enter Image">
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label class="my-1" asp-for="Price">Price</label>
            <input type="text" asp-for="Price" class="form-control mb-1" placeholder="Enter Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label class="my-1" asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control my-1">
            <option value="True">True</option>
            <option value="False">False</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col">
            <button type="submit" class="btn btn-primary my-2">Update</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPArtial" />
    }
}