@using WebProject.Areas.Identity.Data;

@model IEnumerable<ApplicationUser>

<h3>Users (@Model.Count())</h3>

<form asp-controller="User" asp-action="Index" class="my-3">
  <p>
    Mail: <input type="text" name="SearchString" class="rounded" />
    <input type="submit" value="Filter" />
  </p>
</form>

<div class="text-center">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Mail</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      @foreach (ApplicationUser user in Model)
      {
        <tr>
          <td scope="row">@user.Id</td>
          <td>@user.FirstName</td>
          <td>@user.LastName</td>
          <td>@user.Email</td>
          <td>
            <a
              asp-controller="User"
              asp-action="Edit"
              asp-route-id="@user.Id"
              class="btn btn-outline-success"
            >
              <i class="bi bi-pen"></i> Edit
            </a>
            <a
              asp-controller="User"
              asp-action="Delete"
              asp-route-id="@user.Id"
              data-toggle="ajax-modal"
              class="btn btn-outline-danger"
            >
              <i class="bi bi-trash"></i> Delete</a
            >
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>

<a class="btn btn-success" asp-controller="User" asp-action="Create">New User</a>



