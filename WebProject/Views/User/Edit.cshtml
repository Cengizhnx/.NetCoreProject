@using WebProject.Areas.Identity.Data;
@model ApplicationUser

<form method="post" asp-action="Edit" class="card border-secondary">
  <div class="card-header">Edit User</div>
    <div class="px-4">
  <div class="form-group my-2">
            <label class="my-1" asp-for="FirstName">First Name</label>
            <input type="text" asp-for="FirstName" class="form-control mb-1" placeholder="Enter Name">
            <span asp-validation-for="FirstName" class="text-danger"></span>
  </div>

    <div class="form-group my-2">
            <label class="my-1" asp-for="LastName">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control mb-1" placeholder="Enter Name">
            <span asp-validation-for="LastName" class="text-danger"></span>
  </div>

  <div class="form-group my-2">
    <label class="my-1" asp-for="Email">E-Mail</label>
            <input type="text" asp-for="Email" class="form-control mb-1" placeholder="Enter Mail">
            <span asp-validation-for="Email" class="text-danger"></span>

  </div>

  <div class="col">
  <button type="submit" class="btn btn-primary my-2">Update</button>
  <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
  </div>
  </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPArtial"/>
    }
}