@using WebProject.Areas.Identity.Data;
@model ApplicationUser

<form method="post" action="Add" class="card border-secondary">
  <div class="card-header">Add User</div>
    <div class="px-4">
  <div class="form-group my-2">
    <label class="my-1" for="">Name</label>
    <input type="text" name="Name" class="form-control mb-1" placeholder="Enter Name">
    <span asp-validation-for="FirstName" class="text-danger"></span>
  </div>

  <div class="form-group my-2">
    <label class="my-1" for="">E-Mail</label>
    <input type="text" name="Mail" class="form-control mb-1" placeholder="Enter Mail">
    <span asp-validation-for="Email" class="text-danger"></span>

  </div>

  <div class="col">
  <button type="submit" class="btn btn-primary my-2">Submit</button>
  <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
  </div>
  </div>

</form>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPArtial"/>
  }
}